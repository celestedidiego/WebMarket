<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/webdb</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.modules_directory</param-name>
        <param-value>modules/</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <!--This doesn't work, i don't know why-->
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy</param-value><!-- hh:mm:ss -->
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>debug</param-name>
        <param-value>false</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.webmarket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AmministratoreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_padre</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneCategoriaPadreController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_figlio</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneCategoriaFiglioController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_nipote</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneCategoriaNipoteController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_tecnici</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneTecniciController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_caratteristiche</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneCaratteristicheController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_ordinanti</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AGestioneOrdinantiController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ordinante</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OrdinanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crea_richiesta</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OCreaRichiestaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>richieste</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.ORichiesteOrdinanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>caratteristiche_richiesta</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OCaratteristicheRichiestaController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>visualizza_proposte</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OVisualizzaProposteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>visualizza_ordini</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OVisualizzaOrdiniController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>storico</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.OStoricoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tecnico</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.TecnicoController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prendi_in_consegna</servlet-name>
        <servlet-class>
            it.univaq.webmarket.application.controller.TVisualizzaRichiesteNonGestiteController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>richieste_prese_in_carico</servlet-name>
        <servlet-class>
            it.univaq.webmarket.application.controller.TVisualizzaRichiestePreseInCaricoController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>proposte_tecnico</servlet-name>
        <servlet-class>
            it.univaq.webmarket.application.controller.TVisualizzaProposteController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tecnico_gestione_proposte_accettate</servlet-name>
        <servlet-class>
            it.univaq.webmarket.application.controller.TGestioneProposteAccettateController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tecnico_gestione_ordini</servlet-name>
        <servlet-class>
            it.univaq.webmarket.application.controller.TGestioneOrdiniController
        </servlet-class>
    </servlet>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>
            <!-- admin -->
            /admin,
            /categoria_padre,
            /categoria_figlio,
            /categoria_nipote,
            /gestione_ordinanti,
            /gestione_tecnici
            /gestione_caratteristiche,

            <!-- ordinante -->
            /ordinante,
            /crea_richiesta,
            /richieste,
            /caratteristiche,
            /proposte,
            /ordini,
            /storico,

            <!-- tecnico-->
            /tecnico,
            /prendi_in_consegna,
            /richieste_prese_in_carico,
            /proposte_tecnico,
            /tecnico_gestione_proposte_accettate,
            /tecnico_gestione_ordini,

        </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_padre</servlet-name>
        <url-pattern>/categoria_padre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_tecnici</servlet-name>
        <url-pattern>/gestione_tecnici</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_caratteristiche</servlet-name>
        <url-pattern>/gestione_caratteristiche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_figlio</servlet-name>
        <url-pattern>/categoria_figlio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_nipote</servlet-name>
        <url-pattern>/categoria_nipote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_ordinanti</servlet-name>
        <url-pattern>/gestione_ordinanti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ordinante</servlet-name>
        <url-pattern>/ordinante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crea_richiesta</servlet-name>
        <url-pattern>/crea_richiesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>richieste</servlet-name>
        <url-pattern>/richieste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>caratteristiche_richiesta</servlet-name>
        <url-pattern>/caratteristiche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>visualizza_proposte</servlet-name>
        <url-pattern>/proposte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>visualizza_ordini</servlet-name>
        <url-pattern>/ordini</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>storico</servlet-name>
        <url-pattern>/storico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tecnico</servlet-name>
        <url-pattern>/tecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prendi_in_consegna</servlet-name>
        <url-pattern>/prendi_in_consegna</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>richieste_prese_in_carico</servlet-name>
        <url-pattern>/richieste_prese_in_carico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>proposte_tecnico</servlet-name>
        <url-pattern>/proposte_tecnico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tecnico_gestione_proposte_accettate</servlet-name>
        <url-pattern>/tecnico_gestione_proposte_accettate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tecnico_gestione_ordini</servlet-name>
        <url-pattern>/tecnico_gestione_ordini</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            <!-- 30 minuti-->
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
